# ─── Application ───
APP_NAME=medicord-ocr-service
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ─── Server ───
HOST=0.0.0.0
PORT=8000
WORKERS=4

# ─── JWT Auth ───
JWT_SECRET_KEY=change-me-to-a-secure-random-string-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ─── Redis ───
REDIS_URL=redis://redis:6379/0

# ─── Celery ───
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# ─── OCR ───
TESSERACT_CMD=/usr/bin/tesseract
TESSDATA_PREFIX=/usr/share/tesseract-ocr/5/tessdata
DEFAULT_LANGUAGES=khm+eng
OCR_FALLBACK_ENGINE=easyocr

# ─── File Upload ───
MAX_FILE_SIZE_MB=10
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,tiff,bmp
UPLOAD_DIR=/tmp/medicord-uploads

# ─── Security ───
RATE_LIMIT_PER_MINUTE=30
CORS_ORIGINS=*
DELETE_AFTER_PROCESSING=true

# ─── Optional: LLM Post-processing ───
LLM_ENABLED=false
LLM_PROVIDER=gemini
GEMINI_API_KEY=
OPENAI_API_KEY=
